			"name": "Dan Syme",
			"email": "dan.syme@cartalyst.com",
			"role": "Creator & Designer"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "http://packages.cartalyst.com"
		}
	],
	"require": {
		"php": ">=5.4.0",
		"cartalyst/composer-installers": "1.0.*",

		"platform/admin": "dev-develop",
		"platform/content": "dev-feature/psr-4-php-54"
	},
	"autoload": {
		"classmap": [
			"migrations"
		],
		"psr-4": {
			"Platform\\Pages\\" : "src/"
		}
	},
	"extra": {
		"component": "extension",
		"branch-alias": {
			"dev-master": "2.0.x-dev"
		}
	},
	"minimum-stability": "dev"
}
