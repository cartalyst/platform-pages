{
    "name": "platform/pages",
    "type": "platform-extension",
    "description": "An extension to manage your website pages.",
    "keywords": [
        "cartalyst",
        "platform",
        "laravel",
        "extension",
        "pages"
    ],
    "license": "proprietary",
    "authors": [
        {
            "name": "Cartalyst LLC",
            "email": "help@cartalyst.com",
            "homepage": "https://cartalyst.com"
        }
    ],
    "repositories": [
        { "type": "composer", "url": "https://packages.cartalyst.com" }
    ],
    "require": {
        "php": ">=5.5.9",
        "cartalyst/composer-installers": "1.2.*",
        "platform/access": "4.0.*",
        "platform/content": "4.0.*",
        "platform/foundation": "4.0.*"
    },
    "require-dev": {
        "cartalyst/testing": "~2.0@dev",
        "illuminate/database": "5.1.*",
        "patchwork/utf8": "~1.1",
        "platform/menus": "3.2.*",
        "platform/users": "3.2.*"
    },
    "autoload": {
        "classmap": [
            "database/migrations",
            "database/seeds"
        ],
        "psr-4": { "Platform\\Pages\\" : "src/" }
    },
    "extra": {
        "component": "extension",
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    },
    "minimum-stability": "stable"
}
