{
	"name": "platform/pages",
	"type": "platform-extension",
	"description": "An extension to manage your website pages.",
	"keywords": ["cartalyst", "platform", "laravel", "extension", "cms", "pages"],
	"license": "BSD License (3-clause)",
	"authors": [
		{
			"name": "Cartalyst LLC",
			"email": "help@cartalyst.com"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "http://packages.cartalyst.com"
		}
	],
	"require": {
		"php": ">=5.3.0",
		"cartalyst/composer-installers": "1.0.*",

		"platform/admin": "1.0.*",
		"platform/menus": "1.0.*",
		"platform/users": "1.0.*",
		"platform/content": "1.0.*"
	},
	"require-dev": {
		"mockery/mockery": "0.7.*"
	},
	"autoload": {
		"psr-0": {
			"Platform\\Pages" : "models"
		},
		"classmap": [
			"controllers",
			"database/migrations",
			"plugins",
			"tests",
			"widgets"
		]
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.0-dev"
		}
	},
	"minimum-stability": "dev"
}
